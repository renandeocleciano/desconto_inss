<p style="color: green"><%= notice %></p>

<nav class="panel" id="proponentes">
  <p class="panel-heading"><%= link_to "Adicionar proponente", new_proponente_path, class: "btn btn-outline-primary" %></p>
  <div class="panel-block">
    <h2 class="title is-2"> Proponentes</h2>
  </div>
  <div class="panel-block">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cpf</th>
          <th>Data de Nascimento</th>
          <th>Sal√°rio</th>
          <th>Recolhido</th>
          <th>Valor Final</th>
          <th>Contatos?</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
         <% @proponentes.each do |proponente| %>
        <tr id="<%= dom_id proponente %>">
        <td><%= proponente.nome %></td>
          <td><%= proponente.cpf %></td>
          <td><%= proponente.data_nascimento %></td>
          <td>R$ <%= proponente.salario %></td>
          <td>R$ <%= proponente.recolhido %></td>
          <td>
            R$ <%= calc_salario_final(proponente.salario, proponente.recolhido)%>
          </td>
          <td>
            <span class="tag is-info">
              <%= proponente.contatos.count %>
            </span>
          </td>
          <td>
                <%= link_to "Visualizar proponente", proponente, class: "btn btn-outline-primary" %>
                |
                <%= link_to "Adicionar Contato", proponente, class: "btn btn-outline-info" %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-block>
    <%= paginate @proponentes %>
  </div>
</nav>